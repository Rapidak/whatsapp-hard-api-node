<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
  body {
    background-color: #12202b;
    color: #66fcf1;
    font-family: sans-serif;
  }

  h1 {
    font-size: 3rem;
    font-weight: bold;
    text-shadow: 0 0 10px #66fcf1, 0 0 20px #45a29e;
  }

  .btn-custom {
    background-color: #45a29e;
    border: none;
    color: #0b0c10;
    font-weight: bold;
    text-transform: uppercase;
    box-shadow: 0 0 10px #66fcf1;
    transition: all 0.3s ease;
  }

  .btn-custom:hover {
    background-color: #66fcf1;
    color: #0b0c10;
    box-shadow: 0 0 20px #66fcf1;
  }

  .rd {
    font-family: ui-monospace;
    border-radius: 1rem;
    width: 60%;
  }

  .header {
    padding: 10px;
    text-align: center;
  }
</style>
</head>
<body>
  <div class="container mt-5 border rd">
    <h2 class="mb-4 text-center">Login</h2>

    <a href="/manager/welcome">Welcome</a>
    <!-- Success Message -->
    <% if (query.success) { %>
        <div class="alert alert-success" role="alert">
          <%= decodeURIComponent(query.success) %>
        </div>
      <% } %>
  
      <!-- Error Message -->
      <% if (query.error) { %>
        <div class="alert alert-danger" role="alert">
          <%= decodeURIComponent(query.error) %>
        </div>
      <% } %>

    <form action="/manager/login" method="POST" class="mx-auto" style="width: 70%;">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
      <button type="submit" class="btn btn-custom mt-3 px-4 py-2 header">Login</button>
      <p class="text-center mt-3">Don't have an account? <a href="/manager/register">Register</a></p>
    </form>
  </div>

  <script>
    // Parse Query Params and Pass to EJS
    const query = new URLSearchParams(window.location.search);
    if (query.has('error')) {
      const errorMsg = query.get('error');
      document.querySelector('.alert').innerText = decodeURIComponent(errorMsg);
    }
  </script>
</body>
</html>
